<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph_main.xml"
    app:startDestination="@id/mainFragment">
    <fragment
        android:id="@+id/mainFragment"
        android:name="csoc.glgs.com.navigationexample.MainFragment"
        android:label="MainFragment" />

    <fragment
        android:id="@+id/mainPage1Fragment"
        android:name="csoc.glgs.com.navigationexample.MainPage1Fragment"
        android:label="MainPage1Fragment" >

        <action
            android:id="@+id/action_mainPage1Fragment_to_mainPage2Fragment2"
            app:destination="@id/mainPage2Fragment"
            app:enterAnim="@anim/slide_right_in"
            app:exitAnim="@anim/slide_left_out"
            app:popEnterAnim="@anim/slide_left_in"
            app:popExitAnim="@anim/slide_right_out" />
    </fragment>

    <fragment
        android:id="@+id/mainPage2Fragment"
        android:name="csoc.glgs.com.navigationexample.MainPage2Fragment"
        android:label="MainPage2Fragment">

        <action
            android:id="@+id/action_mainPage2Fragment_to_mainPage3Fragment"
            app:destination="@id/mainPage3Fragment"
            app:enterAnim="@anim/slide_right_in"
            app:exitAnim="@anim/slide_left_out"
            app:popEnterAnim="@anim/slide_left_in"
            app:popExitAnim="@anim/slide_right_out"
            />
    </fragment>
    <fragment
        android:id="@+id/mainPage3Fragment"
        android:name="csoc.glgs.com.navigationexample.MainPage3Fragment"
        android:label="fragment_page3"
        app:enterAnim="@anim/slide_right_in"
        app:exitAnim="@anim/slide_left_out"
        app:popEnterAnim="@anim/slide_left_in"
        app:popExitAnim="@anim/slide_right_out"
        >
    </fragment>
    <fragment
        android:id="@+id/mainPage4Fragment"
        android:name="csoc.glgs.com.navigationexample.MainPage4Fragment"
        android:label="MainPage4Fragment" />
    <fragment
        android:id="@+id/mainPage5Fragment"
        android:name="csoc.glgs.com.navigationexample.MainPage5Fragment"
        android:label="MainPage5Fragment" />


</navigation>